void setup() {
  pinMode(relayPin, OUTPUT);
  pinMode(switchPin, INPUT_PULLUP);
  digitalWrite(relayPin, LOW);

  Serial.begin(9600);

  Wire1.begin();

  if (myOLED.begin(Wire1) == false) {
    Serial.println("Device begin failed. Freezing...");
    while (true)
      ;
  }
  Serial.println("Begin success");

  width = myOLED.getWidth();
  height = myOLED.getHeight();

  myOLED.reset(true);
  myOLED.erase();
  myOLED.bitmap(0, 0, Ravens_Pi_Icon, 128, 32);
  myOLED.display();

  delay(3000);

  myOLED.erase();
  myOLED.display();
  displayText("Ready.");

  delay(1000);
}

void loop() {
  int switchState = digitalRead(switchPin);

  if (digitalRead(switchPin) == LOW) {
    Serial.println("Switch held!");
    displayText("Robot Detected");

    int waterLevel = analogRead(waterSensorPin);
    Serial.print("Water sensor: ");
    Serial.println(waterLevel);

    if (waterLevel < 200) {
      Serial.println("Refill station, it is low on water");
      for (int i = 0; i < 5; i++) {
        displayText("Station low");
        delay(1000);
        displayText("Refill station");
        delay(1000);
      }
      displayText("Ready.");
    } else {
      pourWater();
      displayText("Ready.");
    }

    while (digitalRead(switchPin) == LOW) {
      delay(50);
    }
  }

  delay(50);  // small debounce
}

// Pour about 1 cup of water
void pourWater() {
  displayText("Pouring Water");
  digitalWrite(relayPin, HIGH);
  delay(10500);
  digitalWrite(relayPin, LOW);
  displayText("Completed");
}

// Display text that is centered
void displayText(const char* text) {

  myOLED.erase();

  myOLED.setFont(QW_FONT_8X16);

  xdisp0 = (myOLED.getWidth() - myOLED.getStringWidth(text)) / 2;

  // starting y position - screen height minus string height / 2
  ydisp0 = (myOLED.getHeight() - myOLED.getStringHeight(text)) / 2;

  myOLED.text(xdisp0, ydisp0, text, 1);

  myOLED.display();
}
